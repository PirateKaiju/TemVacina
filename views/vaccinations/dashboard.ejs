<%- include('../header') %> 

<main>
    <div class="hero is-medium">
        <div class="hero-body">
            <div class="container box">
                <div class="columns is-centered">
                    <div class="column is-vcentered is-half">

                        <h1 class="title">Vacinas </h1>
                        
                        <% if (vaccinations.length > 0) { %>
                            <table class="table is-bordered is-striped is-fullwidth is-hoverable">

                            
                            <% vaccinations.forEach(vaccination => { %>
                                
                                <tr>
                                    <th></th>
                                    <td> <%= vaccination.name %> </td>
                                    <td> <%= vaccination.description %> </td>
                                    <td> <%= vaccination.vaccode %> </td>
                                    <td><a href="/vaccinations/<%= vaccination._id %>/edit">Edit</a></td>
                                    <td><a href="/vaccinations/<%= vaccination._id %>/delete">Delete</a></td>
                                </tr>
                            <% }) %>

                            </table>
                        <% } %>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../footer') %> 